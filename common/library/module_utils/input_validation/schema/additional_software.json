{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_,]+$": {
      "type": "object",
      "properties": {
        "cluster": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "oneOf": [
              {
                "properties": {
                  "package": { "type": "string", "minLength": 1 },
                  "type": { "const": "rpm" },
                  "repo_name": { "type": "string", "minLength": 1 },
                  "reboot_required": { "type": "string", "minLength": 1, "enum": ["true", "false"] }
                },
                "required": ["package", "type", "repo_name"],
                "additionalProperties": false
              },
              {
                "properties": {
                  "package": { "type": "string", "minLength": 1 },
                  "type": { "const": "rpm_list" },
                  "repo_name": { "type": "string", "minLength": 1 },
                  "reboot_required": { "type": "string", "minLength": 1, "enum": ["true", "false"] }
                },
                "required": ["package", "type", "repo_name"],
                "additionalProperties": false
              },
              {
                "properties": {
                  "package": { "type": "string", "minLength": 1 },
                  "type": { "const": "image" },
                  "tag": { "type": "string" },
                  "digest": { "type": "string" }
                },
                "required": ["package", "type"],
                "oneOf": [
                  { "required": ["tag"] },
                  { "required": ["digest"] }
                ],
                "additionalProperties": false
              }
            ]
          }
        }
      },
      "required": ["cluster"],
      "additionalProperties": false
    }
  },
  "required": ["additional_software"],
  "additionalProperties": false
}
