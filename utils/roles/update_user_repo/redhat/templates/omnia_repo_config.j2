[Omnia-RPM-Repo{{ item.final_repo_name }}]
name=Omnia-Repo-{{ item.final_repo_name }}
baseurl={{ (hostvars['localhost']['pulp_output_fact'] | selectattr('name', 'equalto', item.final_repo_name) | map(attribute='base_url') | list | first) }}
enabled=1
gpgcheck=0
skip_if_unavailable=True
{% if pulp_protocol_https %}
sslverify=1
sslcacert="{{ pulp_cert_path }}"
{% endif %}
