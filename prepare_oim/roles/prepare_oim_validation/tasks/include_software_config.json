---

- name: Check that the software_config_json exists
  ansible.builtin.stat:
    path: "{{ software_config_json_file }}"
  register: stat_result

- name: Fail if software_config_json file doesn't exist
  ansible.builtin.fail:
    msg: "{{ fail_msg_software_config_file }}"
  when: not stat_result.stat.exists

- name: Include variable file software_config_json
  block:
    - name: Include variable file software_config.json
      ansible.builtin.include_vars: "{{ software_config_json_file }}"
      register: include_software_config
      no_log: true
  rescue:
    - name: Failed to include software_config.json
      ansible.builtin.fail:
        msg: "{{ software_config_syntax_fail_msg }} Possible Syntax Error Hints: {{ include_software_config.message }}"

