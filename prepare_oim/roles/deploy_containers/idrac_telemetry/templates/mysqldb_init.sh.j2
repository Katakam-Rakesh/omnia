#!/bin/sh

# Script to initialize MySQL database for telemetry data collection


# Path to MySQL data directory inside the container
MYSQL_DATA_DIR="/var/lib/mysql"

# Check if MySQL is already initialized (look for system tables)
if [ -d "$MYSQL_DATA_DIR/mysql" ] && [ "$(ls -A $MYSQL_DATA_DIR/mysql)" ]; then
  echo "MySQL data directory already initialized."
else
  echo "MySQL data directory not found or empty. Proceeding with initialization."
fi

# Always pass control to the default entrypoint to let it handle the actual startup
exec /usr/local/bin/docker-entrypoint.sh mysqld
